{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2018"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ES2022",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test/demo"
  ]
}
